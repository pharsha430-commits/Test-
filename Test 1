package SampleTestNG;

import java.time.Duration;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.support.ui.ExpectedConditions;
import org.openqa.selenium.support.ui.WebDriverWait;
import org.testng.Assert;
import org.testng.annotations.AfterClass;
import org.testng.annotations.BeforeClass;
import org.testng.annotations.Test;

public class Ecommerce_Test {
	
	WebDriver driver;
	WebDriverWait wait;
	
	@BeforeClass
	public void setup() {
		driver = new ChromeDriver();
		driver.manage().window().maximize();
		wait = new WebDriverWait (driver,Duration.ofSeconds(10));
	}
		
		@Test
		public void homePageTest() {
		//home page 
		driver.get("https://www.demoblaze.com/");
		wait.until(ExpectedConditions.visibilityOfElementLocated(By.linkText("Samsung galaxy s6")));
		String title = driver.getTitle();
		System.out.print("Page Title is:  " + title);
		Assert.assertTrue(title.trim().equalsIgnoreCase("Store"), "Home page not loaded");
		}
		
		@Test(dependsOnMethods = "homePageTest")
		public void productPageTest() {
			wait.until(ExpectedConditions
		            .elementToBeClickable(By.linkText("Samsung galaxy s6")))
		            .click(); 
			String productName = wait.until(ExpectedConditions
	                .visibilityOfElementLocated(By.xpath("//h2[@class='name']")))
	                .getText();
			Assert.assertEquals(productName, "Samsung galaxy s6", "Product page not loaded");
		}
		@AfterClass
		public void teardown() {
			driver.quit();
		}	
	}


package SampleTestNG;

import java.time.Duration;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.support.ui.ExpectedConditions;
import org.openqa.selenium.support.ui.Select;
import org.openqa.selenium.support.ui.WebDriverWait;
import org.testng.Assert;
import org.testng.annotations.AfterClass;
import org.testng.annotations.BeforeClass;
import org.testng.annotations.Test;

public class CustomerLoginTest {

    WebDriver driver;
    WebDriverWait wait;

    @BeforeClass
    public void setup() {
        driver = new ChromeDriver();
        driver.manage().window().maximize();

        wait = new WebDriverWait(driver, Duration.ofSeconds(10));

        driver.get("https://www.globalsqa.com/angularJs-protractor/BankingProject/#/login");
    }

    @Test
    public void customerLoginTest() {

        // Click on Customer Login
        WebElement customerLoginBtn = wait.until(
                ExpectedConditions.elementToBeClickable(
                        By.cssSelector("button.btn.btn-primary.btn-lg")));
        customerLoginBtn.click();

        // Wait for dropdown
        WebElement userDropdown = wait.until(
                ExpectedConditions.visibilityOfElementLocated(By.id("userSelect")));

        // Select customer
        Select select = new Select(userDropdown);
        select.selectByVisibleText("Harry Potter");

        // Click Login
        WebElement loginBtn = wait.until(
                ExpectedConditions.elementToBeClickable(By.cssSelector("button[type='submit']")));
        loginBtn.click();

        // Assertion â€“ Welcome message
        WebElement welcomeText = wait.until(
                ExpectedConditions.visibilityOfElementLocated(By.cssSelector("span.fontBig")));

        Assert.assertTrue(
                welcomeText.getText().contains("Harry Potter"),
                "Customer Login Failed");
    }

    @AfterClass
    public void tearDown() {
        driver.quit();
    }
}
